@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
<form method="POST">
    <input asp-for="DeletedCategory.Id" hidden> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DeletedCategory.Name" class="p-0"></label>
            <input asp-for="DeletedCategory.Name" class="form-control" disabled  />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DeletedCategory.DisplayOrder" class="p-0"></label>
            <input asp-for="DeletedCategory.DisplayOrder" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>
        </div>
    </div>

</form>

